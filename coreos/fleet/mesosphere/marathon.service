[Unit]
Description=marathon
After=docker.service
Requires=docker.service

[Service]
ExecStartPre=-/usr/bin/docker kill %p
ExecStartPre=-/usr/bin/docker rm -v %p
ExecStartPre=/usr/bin/docker pull mesosphere/marathon:v0.11.0
ExecStart=/usr/bin/docker run --name %p --rm --net=host -e MARATHON_HOSTNAME=%H.dsra.local -e MARATHON_HTTP_PORT=80 -e MARATHON_ZK=zk://10.105.0.1:2181,10.105.0.3:2181,10.105.0.5:2181,10.105.0.7:2181,10.105.0.9:2181/marathon -e MARATHON_MASTER='zk://10.105.0.1:2181,10.105.0.3:2181,10.105.0.5:2181,10.105.0.7:2181,10.105.0.9:2181/mesos mesosphere/marathon:v0.11.0 --checkpoint --task_launch_timeout 300000
ExecStop=/usr/bin/docker stop %p
TimeoutStartSec=900s

[X-Fleet]
Global=true
MachineMetadata=role=service

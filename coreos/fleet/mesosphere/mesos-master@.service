[Unit]
Description=mesos-master
After=docker.service
Requires=docker.service

[Service]
User=core
ExecStartPre=-/usr/bin/docker kill %p-%i
ExecStartPre=-/usr/bin/docker rm %p-%i
ExecStartPre=/usr/bin/docker pull hub.dsra.local:5000/dsra/mesos-master:0.23.0.1
ExecStart=/usr/bin/docker run --net=host --name %p-%i -v /data/log/mesos-master:/var/log/mesos -e 'MESOS_LOG_DIR=/var/log/mesos' -e 'MESOS_ZK=zk://10.105.0.1:2181,10.105.0.3:2181,10.105.0.5:2181,10.105.0.7:2181,10.105.0.9:2181/mesos' -e 'MESOS_CLUSTER=DSRA' -e 'MESOS_QUORUM=3'  hub.dsra.local:5000/dsra/mesos-master:0.23.0.1
ExecStop=/usr/bin/docker stop %p-%i
TimeoutStartSec=900s

[X-Fleet]
Conflicts=%p@*.service
MachineMetadata=role=service
